<symbol name="RoundSymbol" id="r">
  <pattern><![CDATA[
  r([0-9.]+)
  ]]></pattern>

  <private_block><![CDATA[
  qreal m_r;
  ]]></private_block>

  <constructor><![CDATA[
  m_r = caps[1].toDouble() / 1000.0 / 2.0;
  ]]></constructor>

  <boundingRect><![CDATA[
  return QRectF(-m_r, -m_r, m_r * 2, m_r * 2);
  ]]></boundingRect>

  <paint><![CDATA[
  painter->setPen(QPen(Qt::red, 0));
  painter->setBrush(Qt::red);
  painter->drawEllipse(QPointF(0, 0), m_r, m_r);
  ]]></paint>

  <addShape><![CDATA[
  path.addEllipse(pos(), m_r, m_r);
  ]]></addShape>
</symbol>
